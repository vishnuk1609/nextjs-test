{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint '*/**/*.{js,jsx,ts,tsx}'",
    "prettier": "prettier --write */**/*.{js,jsx,json,ts,tsx,scss,css,md}",
    "start:dev": "cross-env NODE_ENV=development node server.js",
    "start:staging": "cross-env NODE_ENV=staging node server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "deploy:dev": "cross-env NODE_ENV=development next build && pm2 startOrRestart ecosystem.config.js --only my-app-dev",
    "deploy:staging": "cross-env NODE_ENV=staging next build && pm2 startOrRestart ecosystem.config.js --only my-app-staging",
    "deploy:prod": "cross-env NODE_ENV=production next build && pm2 startOrRestart ecosystem.config.js --only my-app-prod",
    "deploy:prod:http": "NEXT_PUBLIC_SSL_ENABLED=0 npm run deploy:prod",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "axios": "^1.7.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "fs": "^0.0.1-security",
    "https": "^1.0.0",
    "lucide-react": "^0.397.0",
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.1",
    "sass": "^1.78.0",
    "sweetalert2": "^11.13.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "^14.2.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.6",
    "lint-staged": "^12.3.2",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
